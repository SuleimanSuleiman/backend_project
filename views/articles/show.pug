doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet", href="/bootstrap.min.css")
        script(src="/bootstrap.min.js" defer) 
    body 
        .container 
            h1.mb-4 #{article.title}
            .text-muted.mb-2 #{article.createAt.toLocaleString()}
            div #{article.sanitizeHtml}
            a(href="/articles" class= 'btn btn-secondary') All Articles 
            a(href=`/articles/edit/${article.id} ` class= "m-3 btn btn-primary") Edit
